<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".activity.SpeciesSelectionFragment">

    <Spinner
        android:id="@+id/species_selection_fragment_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:dropDownWidth="match_parent"
        android:spinnerMode="dropdown"
        android:layout_marginBottom="@dimen/details_vertical_margin"
        android:layout_marginTop="@dimen/details_vertical_margin" />

    <AutoCompleteTextView
        android:id="@+id/species_selection_fragment_autocomplete"
        android:completionThreshold="1"
        android:layout_marginBottom="@dimen/details_vertical_margin"
        android:layout_marginTop="@dimen/details_vertical_margin"
        android:layout_width="match_parent"
        android:inputType="textNoSuggestions"
        android:hint="@string/species_autocomplete_prompt"
        android:layout_height="wrap_content" />

</LinearLayout>
